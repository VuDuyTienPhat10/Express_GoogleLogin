<h6>Dashboard</h6>
<h1>WELCOME : {{name}}</h1>
<p>Here are your stories</p>

{{#if stories}}
<table class="stripped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories }}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate this.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td>{{status}}</td>
        </tr>


        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}